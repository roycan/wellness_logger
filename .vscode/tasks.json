{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run Mobile App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"linux"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$flutter"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}/mobile_app"
			}
		}
	]
}